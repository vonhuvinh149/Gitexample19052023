<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.activity.ProductDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingEnd="10dp"
        android:titleTextColor="@color/primary"
        app:contentInsetEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_below="@id/toolbar_back"
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_detail"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:background="@drawable/background_shape" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_view"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ZZZZZZZZZZ ZZZZZZZZZZ ZZZ ZZZ ZZZZ ZZ ZZZZZ ZZZZZZ ZZZZZZZ ZZZZZZZZZZ"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_price"
            android:text="Giá: 40.000đ"
            android:textSize="20sp"
            android:textColor="@color/light_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_address"
            android:text="Địa chỉ: Hà lam - Thăng Bình - Quảng Nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Ngày mở bán : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:layout_margin="15dp"
            android:id="@+id/btn_add_to_cart"
            android:orientation="horizontal"
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="Thêm vào giỏ hàng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_gallery"
        android:padding="5dp"
        android:textColor="@color/white"
        android:background="@color/red"
        android:layout_below="@+id/content_view"
        android:text="Hình ảnh liên quan"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/recycler_view_gallery"
        tools:listitem="@layout/layout_item_gallery"
        android:layout_below="@id/tv_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/layout_loading"
        layout="@layout/layout_loading"
        android:visibility="gone" />

</RelativeLayout>