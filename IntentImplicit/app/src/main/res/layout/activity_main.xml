<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/total"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#f20"
        android:text="Total : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
       android:layout_toRightOf="@+id/total"
        android:id="@+id/text_view_score"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#f20"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image_view_random"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/bo" />

    <TextView
        android:id="@+id/text_view_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_random"
        android:layout_marginTop="40dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="Chọn hình bên dưới"
        android:textAllCaps="true"
        android:textColor="#f20"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/image_view_pick"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/text_view_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/no_photo" />

</RelativeLayout>