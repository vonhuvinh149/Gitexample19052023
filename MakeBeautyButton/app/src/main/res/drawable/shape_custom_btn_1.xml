    <solid android:color="#E91E63" />
    <stroke
        android:width="2dp"
        android:color="#2196F3" />
    <corners android:radius="15dp" />
    <padding
        android:bottom="6dp"
        android:left="16dp"
        android:right="16dp"
        android:top="8dp" />

    <gradient
        android:angle="90"
        android:endColor="#a6c1ee"
        android:startColor="#fbc2eb" />
</shape>